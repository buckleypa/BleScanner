<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
              android:layout_margin="15dp"
              android:background="@drawable/sub_card_border">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/characteristicNameTextView"
                        style="@android:style/TextAppearance.Medium">
                </TextView>

                <ToggleButton
                        android:layout_weight="1"
                        android:id="@+id/toggleNotificationsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textOn="Notifications on"
                        android:textOff="Notifications off"
                        android:visibility="gone"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                <ToggleButton
                        android:id="@+id/toggleIndicationsButton"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textOn="Indications on"
                        android:textOff="Indications off"
                        android:visibility="gone"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

        </LinearLayout>


        <EditText
                android:id="@+id/writeCharacteristicEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/writeCharacteristicLabel"
                android:imeActionLabel="@string/writeCharacteristicsImeLabel"
                android:imeOptions="actionSend"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textIsSelectable="false"
                android:visibility="gone" />


        <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/valueTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="0"
                android:stretchColumns="1"
                android:padding="5dp"
                android:visibility="gone" >

                <TableRow
                        android:id="@+id/asciiTableRow"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/asciiRowHeader"
                            android:paddingRight="5dp">
                    </TextView>
                    <TextView
                            android:id="@+id/asciiValueTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </TextView>
                </TableRow>

                <TableRow
                        android:id="@+id/hexTableRow"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/hexRowHeader"
                                android:paddingRight="5dp">
                        </TextView>
                        <TextView
                                android:id="@+id/hexValueTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                        </TextView>
                </TableRow>

                <TableRow
                        android:id="@+id/intTableRow"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/intRowHeader"
                                android:paddingRight="5dp">
                        </TextView>
                        <TextView
                                android:id="@+id/intValueTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                        </TextView>

                </TableRow>


                <TableRow
                        android:id="@+id/intTableRow"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/dateRowHeader"
                                android:paddingRight="5dp">
                        </TextView>
                        <TextView
                                android:id="@+id/valueDateTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                        </TextView>

                </TableRow>
    </TableLayout>

</LinearLayout><!-- From: file:/C:/Users/paulb/AndroidStudioProjects/BleScannerProject/BleScanner/src/main/res/layout/characteristic_list_item.xml -->
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_margin="15dp"
    android:background="@drawable/sub_card_border">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characteristicNameTextView"
                style="@android:style/TextAppearance.Large"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characteristicUuidTextView"
                style="@android:style/TextAppearance.Small">
            </TextView>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doReadTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Read"
                android:padding="10dp"
                style="@android:style/TextAppearance.Medium">
            </TextView>

            <TextView
                android:id="@+id/doWriteTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Write"
                android:padding="10dp"
                style="@android:style/TextAppearance.Medium">
            </TextView>

            <TextView
                android:id="@+id/doNotifyTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:padding="10dp"
                style="@android:style/TextAppearance.Medium">
            </TextView>

            <TextView
                android:id="@+id/doIndicateTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Indicate"
                android:padding="10dp"
                style="@android:style/TextAppearance.Medium">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/valueTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0"
        android:stretchColumns="1"
        android:visibility="gone">

        <TableRow
                android:id="@+id/asciiTableRow"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                style="@android:style/TextAppearance.Medium">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/asciiRowHeader"
                android:paddingRight="5dp"
               android:singleLine="true">
            </TextView>
            <TextView
                android:id="@+id/asciiValueTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Medium">
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/hexTableRow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/hexRowHeader"
                android:paddingRight="5dp"
                android:singleLine="true">
            </TextView>
            <TextView
                android:id="@+id/hexValueTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Medium">
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/intTableRow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/intRowHeader"
                android:paddingRight="5dp"
                android:singleLine="true">
            </TextView>
            <TextView
                android:id="@+id/intValueTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Medium">
            </TextView>

        </TableRow>

        <TableRow
            android:id="@+id/intTableRow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/dateRowHeader"
                android:paddingRight="5dp"
                android:singleLine="true">
            </TextView>
            <TextView
                android:id="@+id/valueDateTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>

        </TableRow>
    </TableLayout>

</LinearLayout>